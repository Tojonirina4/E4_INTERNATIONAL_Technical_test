@model IEnumerable<User>

@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of User</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Home" asp-action="Create" class="btn btn-primary">Add New User</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Username
                    </th>
                    <th>
                        Surname
                    </th>
                    <th>
                        Cellphone
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="20%">@item.Username</td>
                    <td width="20%">@item.Surname</td>
                    <td width="20%">@item.CellphoneNumber</td>
                    <td width="20%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Home" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Edit</a>
                            <a asp-controller="Home" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>